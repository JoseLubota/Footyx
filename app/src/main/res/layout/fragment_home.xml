<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_background">
   <!-- tools:context=".ui.home.HomeFragment"> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- CardView for Upcoming Fixtures (Existing) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/upcoming_fixtures_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp">
            <!-- ... content for upcoming fixtures ... -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/upcoming_fixtures_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/home_upcoming_fixtures_title"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_upcoming_fixtures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="150dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_upcoming_fixture"
                    tools:itemCount="3" />

                <TextView
                    android:id="@+id/no_upcoming_fixtures_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@string/home_no_upcoming_fixtures"
                    android:textColor="#AFAFAF"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:visibility="visible"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for Live Matches (Existing) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/live_matches_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp">
            <!-- ... content for live matches ... -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/live_matches_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/home_live_matches_title"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_live_matches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="150dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_live_match"
                    tools:itemCount="2" />

                <TextView
                    android:id="@+id/no_live_matches_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@string/home_no_live_matches"
                    android:textColor="#AFAFAF"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:visibility="visible"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for New Transfers (NEW SECTION) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/new_transfers_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/new_transfers_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/home_new_transfers_title"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_new_transfers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="180dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_new_transfer"
                    tools:itemCount="4" /> <!-- Show a few sample items -->

                <TextView
                    android:id="@+id/no_new_transfers_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@string/home_no_new_transfers"
                    android:textColor="#AFAFAF"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:visibility="visible"/> <!-- Initially hidden -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Other home screen content can continue here -->

    </LinearLayout>
</ScrollView>



