<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- Home Team -->
    <ImageView
        android:id="@+id/image_home_team_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/home_team_logo_desc" />

    <TextView
        android:id="@+id/text_home_team_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/image_home_team_logo"
        app:layout_constraintEnd_toStartOf="@+id/layout_match_time_date"
        app:layout_constraintTop_toTopOf="@id/image_home_team_logo"
        app:layout_constraintBottom_toBottomOf="@id/image_home_team_logo"
        tools:text="Manchester United FC Very Long Name" />

    <!-- Match Time / Date (Center) -->
    <LinearLayout
        android:id="@+id/layout_match_time_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/text_match_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="15:00" />

        <TextView
            android:id="@+id/text_match_date_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AFAFAF"
            android:textSize="12sp"
            tools:text="Sat, 28 Oct" />
    </LinearLayout>

    <!-- Away Team -->
    <TextView
        android:id="@+id/text_away_team_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        android:gravity="end"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/layout_match_time_date"
        app:layout_constraintEnd_toStartOf="@id/image_away_team_logo"
        app:layout_constraintTop_toTopOf="@id/image_away_team_logo"
        app:layout_constraintBottom_toBottomOf="@id/image_away_team_logo"
        tools:text="Liverpool FC" />

    <ImageView
        android:id="@+id/image_away_team_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/away_team_logo_desc" />

    <!-- Optional: League/Competition Name (Below teams and time/date) -->
    <TextView
        android:id="@+id/text_league_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AFAFAF"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/image_home_team_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Premier League"
        android:visibility="gone"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>

