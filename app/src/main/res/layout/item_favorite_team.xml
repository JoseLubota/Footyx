<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="12dp">

    <!-- Team Logo -->
    <ImageView
        android:id="@+id/image_team_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="Team Logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <!-- Team Information -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_remove_team"
        app:layout_constraintStart_toEndOf="@id/image_team_logo"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Manchester United FC" />

        <TextView
            android:id="@+id/text_team_league"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/material_dynamic_neutral30"
            android:textSize="14sp"
            tools:text="Premier League" />

    </LinearLayout>

    <!-- Remove Button -->
    <ImageButton
        android:id="@+id/btn_remove_team"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Remove from favorites"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:tint="@color/material_dynamic_neutral30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Divider Line -->
    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/material_dynamic_neutral30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/image_team_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>
