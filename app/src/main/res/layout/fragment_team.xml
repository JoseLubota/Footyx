<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_background"
    tools:context=".ui.team.Team">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Search Results RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSearchResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:maxHeight="300dp"
            android:layout_margin="8dp"
            android:background="@drawable/search_background"
            android:padding="8dp"
            tools:listitem="@layout/item_team_search" />

        <!-- Search Progress -->
        <ProgressBar
            android:id="@+id/progressSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="@color/primary_green" />

        <!-- Season Selection Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/seasonSelectionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:visibility="gone"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/editSeason"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:hint="Enter season (2021-2023)"
                    android:inputType="number"
                    android:maxLength="4"
                    android:text="2023"
                    android:textColor="@android:color/white"
                    android:textColorHint="#AFAFAF" />

                <Button
                    android:id="@+id/btnClearSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/primary_green"
                    android:text="Clear"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Season:"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- League Selection Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/leagueSelectionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:visibility="gone"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select League:"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerTeamLeagues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="200dp"
                    tools:listitem="@layout/item_team_league" />

                <ProgressBar
                    android:id="@+id/progressLeagues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateTint="@color/primary_green" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Team Details Layout -->
        <LinearLayout
            android:id="@+id/layoutTeamDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Statistics Progress -->
            <ProgressBar
                android:id="@+id/progressStatistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="@color/primary_green" />

            <!-- Team Header Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#1E1E1E"
                app:cardCornerRadius="12dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/team_logo"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/text_team_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/team_logo"
                        app:layout_constraintTop_toTopOf="@id/team_logo"
                        tools:text="Paris Saint Germain" />

                    <TextView
                        android:id="@+id/text_league_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#AFAFAF"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/team_logo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/text_team_name"
                        app:layout_constraintTop_toBottomOf="@id/text_team_name"
                        tools:text="Ligue 1 - 2023" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Recent Form Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#1E1E1E"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Recent Form"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/form_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" />
                    </HorizontalScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Season Overview Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#1E1E1E"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Season Overview"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/text_played"
                            style="@style/Widget.AppCompat.TextView.SpinnerItem"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            tools:text="Played\n34" />
                        <TextView
                            android:id="@+id/text_wins"
                            style="@style/Widget.AppCompat.TextView.SpinnerItem"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#4CAF50"
                            android:textSize="16sp"
                            tools:text="Wins\n22" />
                        <TextView
                            android:id="@+id/text_draws"
                            style="@style/Widget.AppCompat.TextView.SpinnerItem"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#FFC107"
                            android:textSize="16sp"
                            tools:text="Draws\n10" />
                        <TextView
                            android:id="@+id/text_loses"
                            style="@style/Widget.AppCompat.TextView.SpinnerItem"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#F44336"
                            android:textSize="16sp"
                            tools:text="Loses\n2" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Goal Statistics Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#1E1E1E"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Goal Statistics"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Goals For"
                                android:textColor="#AFAFAF"
                                android:textSize="14sp" />
                            <TextView
                                android:id="@+id/text_goals_for"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                tools:text="81" />
                            <TextView
                                android:id="@+id/text_goals_for_avg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#AFAFAF"
                                android:textSize="12sp"
                                tools:text="2.4 per game" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Goals Against"
                                android:textColor="#AFAFAF"
                                android:textSize="14sp" />
                            <TextView
                                android:id="@+id/text_goals_against"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                tools:text="33" />
                            <TextView
                                android:id="@+id/text_goals_against_avg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#AFAFAF"
                                android:textSize="12sp"
                                tools:text="1.0 per game" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Season Records Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#1E1E1E"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Season Records"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="3">

                        <TextView android:text="Biggest Win:" style="@style/Widget.AppCompat.TextView.SpinnerItem" android:textColor="#AFAFAF"/>
                        <TextView android:id="@+id/text_biggest_win" tools:text="2 - 6" style="@style/Widget.AppCompat.TextView.SpinnerItem" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="end"/>

                        <TextView android:text="Clean Sheets:" style="@style/Widget.AppCompat.TextView.SpinnerItem" android:textColor="#AFAFAF"/>
                        <TextView android:id="@+id/text_clean_sheets" tools:text="12" style="@style/Widget.AppCompat.TextView.SpinnerItem" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="end"/>

                        <TextView android:text="Winning Streak:" style="@style/Widget.AppCompat.TextView.SpinnerItem" android:textColor="#AFAFAF"/>
                        <TextView android:id="@+id/text_win_streak" tools:text="8" style="@style/Widget.AppCompat.TextView.SpinnerItem" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="end"/>

                        <TextView android:text="Failed to Score:" style="@style/Widget.AppCompat.TextView.SpinnerItem" android:textColor="#AFAFAF"/>
                        <TextView android:id="@+id/text_failed_to_score" tools:text="3" style="@style/Widget.AppCompat.TextView.SpinnerItem" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="end"/>

                        <TextView android:text="Yellow Cards:" style="@style/Widget.AppCompat.TextView.SpinnerItem" android:textColor="#AFAFAF"/>
                        <TextView android:id="@+id/text_yellow_cards" tools:text="51" style="@style/Widget.AppCompat.TextView.SpinnerItem" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="end"/>

                        <TextView android:text="Red Cards:" style="@style/Widget.AppCompat.TextView.SpinnerItem" android:textColor="#AFAFAF"/>
                        <TextView android:id="@+id/text_red_cards" tools:text="3" style="@style/Widget.AppCompat.TextView.SpinnerItem" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="end"/>

                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Most Used Formations Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#1E1E1E"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Most Used Formations"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerFormations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_formation" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>